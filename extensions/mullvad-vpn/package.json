{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mullvad-vpn",
  "title": "Mullvad VPN",
  "description": "Manage the Mullvad via Raycast",
  "icon": "extension-icon.png",
  "author": "Ben2HellAndBack",
  "categories": [
    "Applications",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "connect",
      "title": "Connect",
      "description": "Establish a VPN tunnel using the default settings",
      "mode": "no-view"
    },
    {
      "name": "disconnect",
      "title": "Disconnect",
      "description": "Disconnect the VPN tunnel",
      "mode": "no-view"
    },
    {
      "name": "connect-via",
      "title": "Connect via...",
      "description": "Connect via a particular VPN tunnel",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.5",
    "@raycast/utils": "^1.4.18",
    "execa": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^29.4.3",
    "prettier": "^2.5.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "test": "jest",
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
